<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout">

    <!-- Menu utilisateur -->
    <ImageView
        android:id="@+id/user_menu_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profil"
        android:padding="16dp"
        android:background="#87CEFA"
        android:contentDescription="@string/user_menu_title"
        android:clickable="true"
        android:focusable="true"
        android:onClick="OnUserMenuButtonClick" />

    <!-- Rubrique -->
    <LinearLayout
        android:id="@+id/rubrique_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bouton "Profile" -->

        <!-- Bouton "Paramètres" -->

        <Button
            android:id="@+id/profile_rubrique_button"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:onClick="onProfileRubriqueClick"
            android:text="@string/menu_profil" />

        <Button
            android:id="@+id/settings_rubrique_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/parametres"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:onClick="onSettingsRubriqueClick" />

        <!-- Bouton "Déconnexion" -->
        <Button
            android:id="@+id/logout_rubrique_button"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:onClick="onLogoutRubriqueClick"
            android:text="@string/menu_logout" />

    </LinearLayout>

</LinearLayout>

