<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Menu utilisateur -->
        <ImageView
            android:id="@+id/user_menu_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profil"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:background="#87CEFA"
            android:contentDescription="User Menu Button"
            android:clickable="true"
            android:onClick="onUserMenuButtonClick" />

        <!-- Rubrique -->
        <LinearLayout
            android:id="@+id/rubrique_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <!-- Bouton "Profile" -->
            <Button
                android:id="@+id/profile_rubrique_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:onClick="onProfileRubriqueClick" />

            <!-- Bouton "Paramètres" -->
            <Button
                android:id="@+id/settings_rubrique_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paramètres"
                android:onClick="onSettingsRubriqueClick" />

            <!-- Bouton "Déconnexion" -->
            <Button
                android:id="@+id/logout_rubrique_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Déconnexion"
                android:onClick="onLogoutRubriqueClick" />

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
