<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SetupProfileActivity">

    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColorHint="@color/dark_gray"
        android:id="@+id/editTextUpdateProfileNameSettings"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/pen_icon"
        android:textColor="@color/black"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Entrer un nom"
        android:importantForAutofill="no"
        android:paddingStart="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPostPicture" />

    <Button
        android:id="@+id/buttonUpdateProfileSettings"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_button"
        android:text="Mettre Ã  jour"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUpdateProfileNameSettings" />

    <TextView
        android:id="@+id/textView_settingsName"
        android:layout_width="211dp"
        android:layout_height="72dp"
        android:layout_marginTop="45dp"
        android:text=""
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar" />

    <ImageView
        android:id="@+id/imageViewPostPicture"
        android:layout_width="222dp"
        android:layout_height="208dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/settings_border"
        android:contentDescription="Profile picture"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_settingsName" />

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="5dp"
        android:background="@drawable/login_button"
        android:backgroundTint="#FF0000"
        android:text="Supprimer le compte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUpdateProfileSettings" />

    <ImageButton
        android:id="@+id/profileEditPicture"
        android:layout_width="62dp"
        android:layout_height="55dp"
        android:contentDescription="edit profile picture"
        android:background="@drawable/settings_border_bis"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewPostPicture"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPostPicture"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewPostPicture"
        app:srcCompat="@drawable/add_photo" />

    <ImageButton
        android:id="@+id/profileDeletePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:contentDescription="delete profile picture"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPostPicture"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewPostPicture"
        app:layout_constraintTop_toTopOf="@+id/imageViewPostPicture"
        app:srcCompat="@android:drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>