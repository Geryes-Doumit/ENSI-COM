<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:circularflow_radiusInDP="20"
    android:id="@+id/showCommentsParentLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Toolbar -->
        <include
            android:id="@+id/toolBar"
            layout="@layout/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userProfilePicture"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:background="@drawable/profil_rounded"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/marginRightView"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@+id/userProfilePicture"
                tools:layout_editor_absoluteY="25dp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/barlow"
                android:gravity="center"
                android:textColor="@color/jaune"
                android:textSize="60px"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/marginRightView"
                tools:layout_editor_absoluteY="10dp"
                tools:text="@tools:sample/first_names" />

            <ImageButton
                android:id="@+id/deletePostButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_menu_delete" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="1pt"
            android:layout_marginRight="5pt"
            android:layout_marginBottom="1pt"
            android:fontFamily="@font/barlow"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageContent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Il n'y a aucun commentaire sous ce post."
            android:id="@+id/commentCount"
            android:textSize="20dp">
        </TextView>

        <!-- Comments RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/newCommentContent"
            android:layout_width="318dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/comment_background"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Ajouter un commentaire..."
            android:inputType="textMultiLine" />

        <ImageButton
            android:id="@+id/sendCommentButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_send" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>