<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:background="@drawable/post_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="85pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="5pt"
                android:fontFamily="@font/barlow"
                android:textColor="@color/jaune"
                android:textSize="55px"
                android:textStyle="bold" />

            <!--    We should put this before TextView, this is only for testing purposes    -->
            <ImageView
                android:id="@+id/userProfilePicture"
                android:layout_width="25pt"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="1pt"
            android:layout_marginRight="5pt"
            android:layout_marginBottom="1pt"
            android:fontFamily="@font/barlow"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_marginLeft="20pt"
            android:text="0"
            android:textAlignment="center"
            android:textSize="60px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/likeButton"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_marginStart="5pt"
            android:background="@drawable/heart_empty" />

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_marginStart="25pt"
            android:text="0"
            android:textAlignment="center"
            android:textSize="60px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/commentButton"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_marginStart="5pt"
            android:background="@drawable/comment_button" />

    </LinearLayout>

</LinearLayout>