<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3pt"
            android:layout_marginTop="3pt">

            <TextView
                android:id="@+id/userName"
                android:textStyle="bold"
                android:textColor="@color/babyblue"
                android:layout_width="85pt"
                android:layout_height="match_parent" />

            <!--    We should put this before TextView, this is only for testing purposes    -->
            <ImageView
                android:id="@+id/userProfilePicture"
                android:layout_width="25pt"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textFontWeight="100"
            android:layout_marginTop="1pt"
            android:layout_marginBottom="1pt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15pt"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/likeCount"
                android:layout_width="25pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="20pt"
                android:text="0"
                android:textAlignment="center"
                android:textSize="70px" />

            <Button
                android:id="@+id/likeButton"
                android:layout_width="15pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="5pt"
                android:background="@drawable/heart_empty" />

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="25pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="25pt"
                android:text="0"
                android:textAlignment="center"
                android:textSize="70px" />

            <Button
                android:id="@+id/commentButton"
                android:layout_width="15pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="5pt"
                android:background="@drawable/comment_button" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>