<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:circularflow_radiusInDP="20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:background="@drawable/post_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3pt"
            android:layout_marginBottom="3pt"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userProfilePicture"
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:layout_marginStart="10dp"
                android:background="@drawable/profil_rounded"
                android:scaleType="centerInside"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="85pt"
                android:layout_height="match_parent"
                android:layout_marginLeft="5pt"
                android:fontFamily="@font/barlow"
                android:gravity="center_vertical"
                android:textAlignment="viewStart"
                android:textColor="@color/jaune"
                android:textSize="60px"
                android:textStyle="bold"
                tools:text="@tools:sample/first_names" />

            <ImageButton
                android:id="@+id/deletePostButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="delete post button"
                app:srcCompat="@android:drawable/ic_menu_delete" />

        </LinearLayout>

        <TextView
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="1pt"
            android:layout_marginRight="5pt"
            android:layout_marginBottom="1pt"
            android:fontFamily="@font/barlow"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageContent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_foreground" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/post_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/likeCount"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_marginLeft="20pt"
            android:text="0"
            android:textAlignment="center"
            android:textSize="60px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/likeButton"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_marginStart="5pt"
            android:contentDescription="like button"
            android:background="@drawable/heart_empty" />

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_marginStart="25pt"
            android:text="0"
            android:textAlignment="center"
            android:textSize="60px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/commentButton"
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:layout_marginStart="5pt"
            android:contentDescription="comment button"
            android:background="@drawable/comment_button" />

    </LinearLayout>

</LinearLayout>