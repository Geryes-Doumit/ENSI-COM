<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="16dp"
        android:background="#87CEFA"
        android:contentDescription="Menu Button"
        android:clickable="true"
        android:onClick="onMenuButtonClick" />

    <!-- Filtres d'actualités -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtres d'actualités"
        android:textSize="16sp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp">

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_round"
            android:layout_marginBottom="16dp"
            android:text="Filtre 1" />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:button="@drawable/checkbox_round"
            android:text="Filtre 2" />

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:button="@drawable/checkbox_round"
            android:text="Filtre 3" />

    </LinearLayout>

    <!-- Filtres d'événements -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtres d'événements"
        android:textSize="16sp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dates importantes :"
            android:padding="8dp" />

    </LinearLayout>

</LinearLayout>


