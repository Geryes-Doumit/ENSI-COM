<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenu principal -->

    <!-- Menu de navigation -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Barre supérieure -->

        <FrameLayout
            android:id="@+id/fragment_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_ribbon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_ribbon" />

        <LinearLayout
            android:id="@+id/top_ribbon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#87CEFA"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <!-- Bouton du menu -->
            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="#87CEFA"
                android:clickable="true"
                android:contentDescription="@string/menu_bouton"
                android:focusable="true"
                android:onClick="onMenuButtonClick"
                android:padding="0dp"
                android:src="@drawable/menu" />

            <!-- Logo ENSICOM -->

            <!-- Menu utilisateur -->

            <TextView
                android:id="@+id/logo_text"
                android:layout_width="0dp"
                android:layout_height="78dp"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="#87CEFA"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center|center_vertical"
                android:onClick="onLogoClick"
                android:text="@string/app_name"
                android:textSize="48sp" />

            <ImageView
                android:id="@+id/user_menu_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="#87CEFA"
                android:clickable="true"
                android:contentDescription="@string/user_menu_title"
                android:focusable="true"
                android:onClick="onUserMenuButtonClick"
                android:padding="0dp"
                android:src="@drawable/profil" />

        </LinearLayout>

        <!-- Conteneur des boutons Actualités et Événements -->
        <LinearLayout
            android:id="@+id/bottom_ribbon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#87CEFA"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Bouton Actualités -->
            <Button
                android:id="@+id/button_actualites"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_actualites"
                android:onClick="onActualitesButtonClick"
                android:text="@string/button_actualites"
                android:textColor="#FFFFFF" />

            <!-- Bouton Événements -->
            <Button
                android:id="@+id/button_evenements"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_evenement"
                android:onClick="onEvenementsButtonClick"
                android:text="@string/button_evenements"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <!-- Contenu du menu de navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- En-tête du menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#87CEFA"
                android:orientation="vertical">

                <!-- Image/logo -->
                <!-- Ajoutez ici votre image ou logo -->

                <!-- Nom de l'utilisateur -->
                <!-- Ajoutez ici le nom de l'utilisateur ou toute autre information pertinente -->

            </LinearLayout>

            <!-- Options du menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Option 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_1"
                    android:padding="16dp"/>

                <!-- Option 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_2"
                    android:padding="16dp"/>

                <!-- Option 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_3"
                    android:padding="16dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
