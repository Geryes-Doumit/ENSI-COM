<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleX="1.2">

    <!-- Contenu principal -->

    <!-- Menu de navigation -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Barre supérieure -->

        <FrameLayout
            android:id="@+id/fragment_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_ribbon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_ribbon"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:id="@+id/top_ribbon"
            android:layout_width="409dp"
            android:layout_height="80dp"
            android:background="@drawable/header_grad"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            android:baselineAligned="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/header_logo"

                    android:contentDescription="Logo"
                    android:scaleX="1"
                    android:scaleY="1.3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/logo_header2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!-- Conteneur des boutons Actualités et Événements -->
        <LinearLayout
            android:id="@+id/bottom_ribbon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#87CEFA"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Bouton Actualités -->

            <!-- Bouton Événements -->
            <ImageButton
                android:id="@+id/button_actualites"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:background="@color/bottom_purple"
                android:contentDescription="actuality"
                android:onClick="onActualitesButtonClick"
                android:paddingStart="10dp"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/footer_article" />

            <ImageButton
                android:id="@+id/button_evenements"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:background="@color/bottom_purple"
                android:contentDescription="Calendar"
                android:onClick="onEvenementsButtonClick"
                android:paddingEnd="10dp"
                android:scaleX="1.8"
                android:scaleY="2"
                android:src="@drawable/footer_calendar" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>