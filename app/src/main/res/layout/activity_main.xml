<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenu principal -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Barre supérieure -->
        <LinearLayout
            android:id="@+id/top_ribbon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#87CEFA"
            android:orientation="horizontal">

            <!-- Bouton du menu -->
            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:src="@drawable/menu"
                android:padding="0dp"
                android:background="#87CEFA"
                android:contentDescription="@string/menu_bouton"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onMenuButtonClick" />

            <!-- Logo ENSICOM -->
            <TextView
                android:id="@+id/logo_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="48sp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:background="#87CEFA"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onLogoClick" />

            <!-- Menu utilisateur -->
            <ImageView
                android:id="@+id/user_menu_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profil"
                android:padding="0dp"
                android:background="#87CEFA"
                android:contentDescription="@string/user_menu_title"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onUserMenuButtonClick" />

        </LinearLayout>

        <!-- Conteneur des boutons Actualités et Événements -->
        <LinearLayout
            android:id="@+id/bottom_ribbon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="#87CEFA"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Bouton Actualités -->
            <Button
                android:id="@+id/button_actualites"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_actualites"
                android:onClick="onActualitesButtonClick"
                android:text="@string/button_actualites"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#FFFFFF"/>

            <!-- Bouton Événements -->
            <Button
                android:id="@+id/button_evenements"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_evenement"
                android:onClick="onEvenementsButtonClick"
                android:text="@string/button_evenements"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

    </RelativeLayout>

    <!-- Menu de navigation -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <!-- Contenu du menu de navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- En-tête du menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#87CEFA"
                android:orientation="vertical">

                <!-- Image/logo -->
                <!-- Ajoutez ici votre image ou logo -->

                <!-- Nom de l'utilisateur -->
                <!-- Ajoutez ici le nom de l'utilisateur ou toute autre information pertinente -->

            </LinearLayout>

            <!-- Options du menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Option 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_1"
                    android:padding="16dp"/>

                <!-- Option 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_2"
                    android:padding="16dp"/>

                <!-- Option 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_3"
                    android:padding="16dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
